        <div class="dot"></div>
        <div class="dot"></div>
        <div class="dot"></div>
        <div class="dot"></div>

    </div>

    <style>
        @keyframes changeColor {
            0% {
                background-color: forestgreen;
            }

            25% {
                background-color: dodgerblue;
            }

            50% {
                background-color: coral;
            }

            75% {
                background-color: gold;
            }

            100% {
                background-color: violet;
            }
        }

        .dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            margin: 0 4px;
            display: inline-block;
            animation: pulse 1s infinite alternate, changeColor 5s linear infinite;
        }

        @keyframes pulse {
            0% {
                transform: scale(1);
                opacity: 0.5;
            }

            100% {
                transform: scale(1.2);
                opacity: 1;
            }
        }
    </style>
</body>

</html>